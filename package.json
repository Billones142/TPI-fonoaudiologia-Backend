{
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun ./src/server.ts",
    "dev": "bun --watch ./src/server.ts",
    "eslint-check": "bunx --bun eslint --ext .ts src",
    "prisma-generate": "bunx --bun prisma generate",
    "build-deploy-executable": "bun install && bunx --bun prisma generate && bun build --compile --minify --sourcemap ./src/server.ts --outfile fonoBackEndServer",
    "prisma-dev-migrate": "bunx --bun prisma migrate dev"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-type-checked"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "indent": [
        "warn",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-multiple-empty-lines": [
        "warn",
        {
          "max": 2
        }
      ],
      "no-warning-comments": [
        "warn"
      ]
    }
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@jest/globals": "^30.0.0-beta.3",
    "@types/bun": "latest",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/supertest": "^6.0.3",
    "eslint": "^8.56.0",
    "globals": "^16.2.0",
    "openapi-typescript-codegen": "^0.29.0",
    "typescript-eslint": "^7.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@supabase/auth-helpers-remix": "^0.4.0",
    "@supabase/supabase-js": "^2.50.0",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.8.2",
    "supabase": "^2.24.3"
  }
}